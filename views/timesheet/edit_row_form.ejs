<form id="adTsRow" action="timesheet/updateRow" method="POST">
	<div class="form-group">
	    <label>Activity Title</label>
	    <input type="text" class="form-control" placeholder="Title" name="title" value="<%= tsRow.title %>">
	  </div>	 
	<div class="form-group">
		<div style="display:inline-block; width:30%;">
		  	<label>Type</label>
		    <select name="type" class="form-control">
		    	<option value="">Select an option</option>
			  	<option value="shelter">Shelter</option>
			  	<option value="food">Food</option>
			  	<option value="entertainment">Entertainment</option>
			  	<option value="comfort">Comfort</option>
			  	<option value="misc">Miscellaneous</option>
			</select>
		</div>
		<div style="display:inline-block; width:30%;">
	    	<label>Time in hours</label>
			<input type="text" class="form-control" placeholder="Number hours spent"  name="hours" value="<%= tsRow.hours %>"/>
		</div>
		<div style="display:inline-block; width:30%;">
	    	<label>Amount</label>
			<input type="text" class="form-control" placeholder="Amount in dollar"  name="amount" value="<%= tsRow.amount %>">
		</div>
	</div>
	<div class="form-group">
	    <label>Description</label>
	    <textarea class="form-control" rows="3" name="description"><%= tsRow.description %></textarea>
	</div>
    <input type="hidden" name="rowid" value="<%= tsRow.id %>"/>
</form>