<form id="adTsRow" action="timesheet/addRow" method="POST">
	<div class="form-group">
	    <label>Activity Title</label>
	    <input type="text" class="form-control" placeholder="Title" name="title">
	  </div>
	  <div class="form-group">
	    <label>Description</label>
	    <textarea class="form-control" rows="3" name="description"></textarea>
	  </div>
	  <div class="form-group">
	  	<label>Type</label>
	    <select name="type" class="form-control">
		  <option>Shelter</option>
		  <option>Food</option>
		  <option>Entertainment</option>
		  <option>Comfort</option>
		  <option>Miscellaneous</option>
		</select>
	  </div>
	<div class="form-group">
	    <label>Time in hours</label>
		<input type="text" class="form-control" placeholder="Number hours spent"  name="hours">
	</div>
	<div class="form-group">
	    <label>Amount</label>
		<input type="text" class="form-control" placeholder="Amount in dollar"  name="amount">
	</div>
	<input type="hidden" name="owner" value="<%- customer.id %>">
</form>